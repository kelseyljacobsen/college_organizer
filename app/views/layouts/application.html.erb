<!DOCTYPE html>
<html>
<head>
  <title>CollegeOrganizer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class='container'>
		<div class='pull-right'>

		<% if current_user %>
			Logged in as <%= current_user.first_name + ' ' + current_user.last_name %> | <%= link_to "Logout", :logout %>
		<% else %>
			<%= link_to "Login", :login %> | <%= link_to "Signup", :signup %>
		<% end %>
		</div>

		<%= yield %>
	</div>
</body>
</html>
