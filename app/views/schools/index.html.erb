<h1>Schools List</h1>

<form class="form-inline">

	<%= form_tag('/schools', method:"get", class: "form-search" )do %> <!-- sending to same page it's on -->
	  <p><%= text_field_tag :search, nil, class: "form-control input-medium search-query" %>
	  <%= select_tag(:field, options_for_select(["name", "state"]), class: "form-control") %>
	  <%= button_tag(type: 'submit', class: "btn btn-default") do %>
	  		<span class="glyphicon glyphicon-search"></span> 
		<% end %>
	<% end %></p>

</form>

<br>

<% @schools.each do |s| %>
	<p><%= s.name %> <%= link_to '', school_path(s), title: "Click for school info", class: "glyphicon glyphicon-info-sign" %></p><br>
	<% end %>

<div>
	<%= link_to "Back to my profile", profile_path %>
</div>