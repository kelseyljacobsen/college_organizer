<div class="jumbotron" id="schools-index-jumbotron">
	<h1>Schools List</h1>
</div>

<div class="center-search-bar">
	<div class="form-inline">

		<%= form_tag('/schools', method:"get", class: "form-search" )do %> <!-- sending to same page it's on -->
		<%= text_field_tag :search, nil, class: "form-control input-medium search-query" %>
		  <%= select_tag(:field, options_for_select(["name", "state"]), class: "form-control") %>
		  <%= button_tag(type: 'submit', class: "btn btn-default") do %>
		  		<span class="glyphicon glyphicon-search"></span> 
			<% end %>
		<% end %>

	</div>
</div>

<br>

<% @schools.each do |s| %>
	<p><%= link_to "#{s.name}", school_path(s), title: "Click for school info" %></p><br>
	<% end %>


