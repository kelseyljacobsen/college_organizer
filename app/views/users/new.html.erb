
<div class="jumbotron" id="signup-jumbotron">
	<h1>Signup!</h1>
	<h3>We're glad you're here.</h3>
</div>

<% flash.each do |key, value| %>
	<div class="alert alert-<%= key %>" role="alert">
   	   <%= value %><br>
	</div>
<% end %>


<div class="container-fluid">

	<div class="col-md-3">
	</div>

	<div class="form-group">
		<div class="col-md-6">
			<%= form_for @user do |f| %>
			<div class="row">
				<label for="first_name">First Name</label>
				<%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name" %>
			</div><br>
			<div class="row">
				<label for="last_name">Last Name</label>
				<%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name" %>
			</div><br>
			<div class="row">
				<label for="email">Email address</label>
				<%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
			</div><br>
			<div class="row">
				<label for="email">Password</label>
				<%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
			</div><br>
			<div class="row">
				<label for="password_combination">Password Confirmation</label>
				<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter your password once more" %>
			</div><br>
			<div class="row">
				<div class="center-signup-button">
					<%= f.submit "Join now!", class: "btn btn-primary" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-3">
	</div>



</div>

