<div class="jumbotron">
	<h1>My College List</h1>
</div>

	<% flash.each do |key, value| %>
		<div class="alert alert-<%= key %>" role="alert">
	   	   <%= value %><br>
		</div>
	<% end %>

<br>


	<div role="tabpanel">

	  <!-- Nav tabs -->
	  <ul class="nav nav-tabs" role="tablist">
	    <li role="presentation" class="active"><a href="#safety" role="tab" data-toggle="tab">Safety Schools</a></li>
	    <li role="presentation"><a href="#target" role="tab" data-toggle="tab">Target Schools</a></li>
	    <li role="presentation"><a href="#reach" role="tab" data-toggle="tab">Reach Schools</a></li>
	  </ul>

	  <!-- Tab panes -->
	  <div class="tab-content">

	    <div role="tabpanel" class="tab-pane fade in active" id="safety">	
		   	<table class="table table-striped">
		   		<thead>
			 	<tr>
			 		<th>Name</th>
			 		<th>Location</th>
			 		<th>Website</th>
			 		<th>View/Delete</th>
			 	</tr>
			 	</thead>
			 	<tbody>
			 	<tr>
			 		<% @user.safety_schools.each do |school_id| %>
			 		<% school = School.find(school_id) %>
						<td><%= school.name %></td>
						<td><%= school.city %>, <%= school.state %></td>
						<td><%= school.website %></td>
						<td><%= link_to '', school_path(id: school_id, list: "safety"), title: "Click for school info", class: "glyphicon glyphicon-info-sign" %>
						<%= link_to '', delete_school_path(id: school_id, list: "safety"), data: { confirm: "Are you sure you want to delete this school?" }, title: "Delete school from list", class: "glyphicon glyphicon-remove-circle" %></td>
				</tr>
			  	<% end %>
			  	</tbody>
			</table>
	    </div>

	    <div role="tabpanel" class="tab-pane fade in" id="target">
